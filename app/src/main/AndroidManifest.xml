<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.moneymanagement">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Enroll.EnrollCheckPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".Manage.DetailInfoPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".Manage.DeleteCheckPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".Search.SearchResultPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".Manage.ModifyInfoPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".Manage.ModifyCheckPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".AuthorizationPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog" />
        <activity
            android:name=".Search.SearchOnlyActivity"
            android:label="@string/title_searching_only"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QuestionPopup"
            android:theme="@style/AppTheme.NoActionBar.Dialog"
            />
    </application>

</manifest>